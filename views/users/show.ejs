<%- include ('../partials/header') %> 

<div class="uk-container uk-margin-top">
    <h1 class="uk-text-center">Utilisateur - <%= user.firstname + ' ' + user.lastname %></h1>

    <div class="uk-width-1-2 uk-align-center">
        <form action="/user/<%= user.id %>/edit" method="post">
            <table class="uk-table uk-table-small uk-table-striped">
                <tbody>
                    <tr>
                        <th>Nom</th>
                        <th><input type="text" class="uk-input uk-form-small" name="lastname" value="<%= user.lastname %>"></th>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <th><input type="text" class="uk-input uk-form-small" name="firstname" value="<%= user.firstname %>"></th>
                    </tr>
                    <tr>
                        <th>Âge</th>
                        <th><input type="number" class="uk-input uk-form-small" name="age" step="1" min="1" value="<%= user.age %>"></th>
                    </tr>
                </tbody>
            </table>

            <button type="submit" class="uk-button uk-button-primary uk-button-small uk-width-1-1">
                Mettre à jour
            </button>
        </form>

        <a href="/users" class="uk-button uk-button-default uk-button-small uk-width-1-1 uk-margin-small-top">
            Retour à la liste des utilisateurs
        </a>
    </div>

</div>

<%- include ('../partials/footer') %>