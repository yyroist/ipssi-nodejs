<%- include ('../partials/header') %> 

<div class="uk-container uk-margin-top">
    <h1 class="uk-text-center">Liste utilisateurs</h1>

    <a href="/users/create" class="uk-button uk-button-primary uk-button-small uk-align-right">
        Ajouter un nouvel utilisateur
    </a>

    <table class="uk-table uk-table-striped uk-table-small">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Âge</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            <% if (users.length) { %>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.lastname %></td>
                        <td><%= user.firstname %></td>
                        <td><%= user.age %></td>
                        <td>
                            <a href="/user/<%= user.id %>" uk-icon="icon: info" uk-tooltip="Consulter fiche utilisateur"></a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="uk-text-center">Aucun utilisateur.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include ('../partials/footer') %>