<%- include ('../partials/header') %> 

<div class="uk-container uk-margin-top">
    <h1 class="uk-text-center">Ajouter un nouvel article</h1>

    <p class="uk-text-center">Veuillez renseigner les informations du nouvel article :</p>

    <div class="uk-width-1-2 uk-align-center">
        <form action="/article/create" method="post">
            <input type="text" name="title" placeholder="Nom" class="uk-input uk-form-small" required>

            <textarea name="description" cols="30" rows="5" class="uk-textarea uk-form-small uk-margin-small-top uk-margin-small-bottom" placeholder="Description"></textarea>

            <label for="user" class="uk-form-label uk-margin-small-top">Auteur</label>
            <select name="user" id="user" class="uk-select uk-form-small">
                <% users.forEach(u => { %>
                    <option value="<%= u._id %>"><%= u.lastname %> <%= u.firstname %></option>
                <% }) %>
            </select>
            
            <button type="submit" class="uk-button uk-button-primary uk-button-small uk-margin-small-top uk-width-1-1">
                Enregistrer
            </button>
        </form>

        <a href="/users" class="uk-button uk-button-default uk-button-small uk-align-center">
            Retour Ã  la liste des articles
        </a>
    </div>
</div>

<%- include ('../partials/footer') %>